<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".WorldFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background1"
        android:orientation="vertical"
        android:weightSum="10">

        <TextView
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="65dp"
            android:layout_marginRight="60dp"
            android:fontFamily="@font/asul"
            android:text="WORLD COUNT"
            android:textColor="#FFFFFF"
            android:textSize="35dp"
            android:textStyle="bold" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginTop="60dp"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:padding="14dp">
            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="231dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:src="@drawable/growthtotal" />

                    <TextView
                        android:id="@+id/newTotal"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="80dp"
                        android:textAlignment="center"
                        android:textColor="#080D68"
                        android:textSize="15dp" />


                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/icontotal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="45dp"
                        android:layout_marginRight="10dp"
                        android:text="TOTAL"
                        android:textAlignment="center"
                        android:textColor="#080D68"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/worldTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textAlignment="center"
                        android:textColor="#080D68"
                        android:textSize="28dp"
                        android:textStyle="bold" />
                </LinearLayout>
                    
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="231dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="60dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/recovericon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="RECOVERED"
                        android:layout_marginRight="8dp"
                        android:textAlignment="center"
                        android:textColor="#344E05"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/worldRecovered"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#344E05"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textSize="28dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="231dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/active"
                        android:layout_marginTop="60dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:text="ACTIVE"
                        android:textAlignment="center"
                        android:textColor="#5E022E"
                        android:textSize="20dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/worldActive"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#5E022E"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textSize="28dp"
                        android:textStyle="bold"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_height="0dp"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_rowWeight="1"
                app:cardElevation="8dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="231dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:src="@drawable/growthdeaths" />

                    <TextView
                        android:id="@+id/newDeaths"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="80dp"
                        android:textAlignment="center"
                        android:paddingLeft="10dp"
                        android:textColor="#3A3A3C"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/skull" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEATHS"
                        android:textAlignment="center"
                        android:layout_marginLeft="40dp"
                        android:textColor="#3A3A3C"
                        android:textSize="20dp"
                        android:layout_marginRight="20dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/worldDeaths"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#3A3A3C"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        android:textSize="28dp"
                        android:textStyle="bold"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>




        </GridLayout>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>